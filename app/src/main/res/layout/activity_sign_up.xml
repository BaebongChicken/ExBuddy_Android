<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="kr.co.kj_studio.exbuddy.activities.SignUpActivity"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="@dimen/menu_width"
            android:layout_height="wrap_content"
            android:text="@string/signup_subtitle_1"
            android:gravity="center" />

        <EditText
            android:layout_width="@dimen/menu_width"
            android:layout_height="wrap_content"
            android:id="@+id/locationEdt"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="@dimen/menu_width"
            android:layout_height="wrap_content"
            android:text="@string/signup_subtitle_2"
            android:gravity="center" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/menu_width"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/Member"
                android:textSize="20dp"
                android:layout_marginRight="5dp"
                android:id="@+id/memberBtn" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DDD"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/coachBtn"
                android:text="@string/Coach" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="@dimen/menu_width"
            android:layout_height="wrap_content"
            android:text="@string/signup_subtitle_3"
            android:gravity="center"
            android:id="@+id/textView" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/menu_width_extend"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+"
                    android:id="@+id/interestedBtn1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+"
                    android:id="@+id/interestedBtn2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+"
                    android:id="@+id/interestedBtn3" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+"
                    android:id="@+id/interestedBtn4" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="@dimen/menu_width_extend"
            android:layout_height="wrap_content"
            android:text="@string/signup_caption_1"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_top" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_button_1" />

</LinearLayout>
